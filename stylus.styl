black = #555555;

body
  font-family: sans-serif;
  margin: 0; 
  padding: 0;
  border: 0;

.menu
  float: left;
  width: 30%;
  height: 900px;
  background: #45B29D;

.tabela
  float: left;
  width: 68%;
  margin: 10px;

header 
  text-align: center;
  margin-top: 10%;
  margin-bottom: 35px;
  h2, p
    color: #ffff;

table
  width: 100%;
  border-collapse: collapse;

ul
  list-style: none;

li 
  margin-bottom: 10px;

img 
  max-width: 220px; height: auto;

label
  display: block;
  font-size: 18px;
  color: black;
  margin-bottom: 4px;

input 
  padding: 5px; 
  width: 270px; 
  text-transform: uppercase;

td,
th
  padding: 5px 15px;
  border: 1px solid #ccc;

button
  float: right;
  border: 0; color: #fff;
  padding: 10px 20px; 
  text-transform: uppercase;

  &.delete
    background: rgb(231, 42, 28); padding: 5px;

  &.submit
    margin: 10px 18%;
    cursor: pointer;
    font-size: 16px;
    background: black;
    border: 2px solid #fff;
    &:hover
      background: #8CC84B;
